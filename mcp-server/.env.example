# Snipe-IT Configuration
# Copy this file to .env and fill in your values

# Your Snipe-IT instance URL (must be HTTPS in production; localhost exempt for development)
SNIPEIT_URL=https://your-snipeit-instance.com

# Your Snipe-IT API token (from Settings > API > Personal Access Tokens)
SNIPEIT_API_TOKEN=your-snipeit-api-token-here

# Bearer token for authenticating MCP clients (generate with: openssl rand -hex 32)
MCP_BEARER_TOKEN=generate-with-openssl-rand-hex-32

# Port for HTTP server (optional, defaults to 3000)
PORT=3000
