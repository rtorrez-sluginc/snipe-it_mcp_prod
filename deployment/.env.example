# Deployment Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control

# Your Snipe-IT API token (from Snipe-IT: Settings > API > Personal Access Tokens)
SNIPEIT_API_TOKEN=your-snipeit-api-token-here

# Cloudflare Tunnel token (from Cloudflare Zero Trust dashboard > Tunnels > your tunnel > token)
CF_TUNNEL_TOKEN=your-cloudflare-tunnel-token-here

# Bearer token for authenticating MCP clients (generate with: openssl rand -hex 32)
MCP_BEARER_TOKEN=generate-with-openssl-rand-hex-32

# Base URL for test scripts (your public tunnel URL)
MCP_BASE_URL=https://mcp.yourdomain.com
